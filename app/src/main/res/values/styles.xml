<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>
    <style name="Function_Button">
        <item name="android:textSize">40sp</item>
        <item name="android:minHeight">80dp</item>
        <item name="android:textColor">@color/colorFunButtonsTxt</item>
        <item name="android:background">@drawable/funciton_button</item>
    </style>
    <style name="Function_Button_Basic_Land">
        <item name="android:textSize">20sp</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:textColor">@color/colorFunButtonsTxt</item>
        <item name="android:background">@drawable/funciton_button</item>
    </style>
    <style name="Function_Button_Science">
        <item name="android:textSize">20sp</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:textColor">@color/colorFunButtonsTxt</item>
        <item name="android:background">@drawable/function_button_science</item>
    </style>

    <style name="Number_Button">
        <item name="android:textSize">40sp</item>
        <item name="android:minHeight">80dp</item>
        <item name="android:textColor">@color/colorNumButtonsTxt</item>
        <item name="android:background">@drawable/number_button</item>
    </style>
    <style name="Result_Button">
        <item name="android:textSize">40sp</item>
        <item name="android:minHeight">80dp</item>
        <item name="android:textColor">@color/colorNumButtonsTxt</item>
        <item name="android:background">@drawable/result_button</item>
    </style>
    <style name="Number_Button_Science">
        <item name="android:textSize">20sp</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:textColor">@color/colorNumButtonsTxt</item>
        <item name="android:background">@drawable/number_button</item>
    </style>
    <style name = "Display">
        <item name="android:background">@color/colorDisplayBG</item>
        <item name="android:textColor">@color/colorDisplayTxt</item>
    </style>
    <style name="background">
        <item name="android:background">@color/colorBackground</item>

    </style>
    <style name="menuButton">
        <item name="android:minWidth">300dp</item>
        <item name="android:layout_height">100dp</item>
    </style>

    <style name="Menu">

    </style>

</resources>
